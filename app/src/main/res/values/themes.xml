    <style name="RoundedBtn">
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="Theme.Includify" parent="Base.Theme.Includify" />

    <style name="CustomTimePickerStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#000000</item> <!-- Black text color -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:textColor">#000000</item> <!-- Button text color -->
    </style>
